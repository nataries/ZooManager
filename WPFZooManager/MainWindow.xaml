<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
            <Label Content="Zoo List"
                   FontWeight="SemiBold"
                    Margin="0, 0, 0, 5"/>

            <ListBox x:Name="listZoos"
                     Height="240"
                    SelectionChanged="listZoos_SelectionChanged"/>

            <TextBox x:Name="myTextBox" 
                     Height="30"
                     Margin="0, 10, 0, 5"/>

            <Button Content="Add Zoo"
                    Click="AddZoo_Click"
                    Padding="5"
                    Margin="0, 3"
                    Background="#D4FFD4"/>

            <Button Content="Update Zoo"
                    Click="UpdateZoo_Click"
                    Padding="5"
                    Margin="0, 3"
                    Background="#FFF4CC"/>

            <Button Content="Delete Zoo"
                    Click="DeleteZoo_Click"
                    Padding="5"
                    Margin="0, 3"
                    Background="#FFD6D6"/>

        </StackPanel>

        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <Label Content="Associated Animals"
                   FontWeight="SemiBold"
                   Margin="0, 0, 0, 5"/>
            <ListBox x:Name="listAssociatedAnimals"
                     Height="240"/>

            <Button Content="Remove Animal"
                    Click="RemoveAnimal_Click"
                    Padding="5"
                    Background="#FFD6D6"
                    Margin="0, 10, 0, 0"/>

        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">

            <Label Content="All Animals"
                   FontWeight="SemiBold"
                   Margin="0, 0, 0, 5"/>

            <ListBox x:Name="listAllAnimals"
                     Height="240"/>

            <Button Content="Add Animal to Zoo"
                 Click="AddAnimalToZoo_Click"
                 Padding="5"
                 Margin="0, 3"
                 Background="#CCE5FF"/>

            <Button Content="Add Animal Zoo"
                    Click="AddAnimal_Click"
                    Padding="5"
                    Background="#D4FFD4"
                    Margin="0, 3"/>

            <Button Content="Update Animal"
                    Click="UpdateAnimal_Click"
                    Padding="5"
                    Background="#FFF4CC"
                    Margin="0, 3"/>

            <Button Content="Delete Animal"
                    Click="DeleteAnimal_Click"
                    Padding="5"
                    Background="#FFD6D6"
                    Margin="0, 3"/>
        </StackPanel>
    </Grid>
</Window>
